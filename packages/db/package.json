{
	"version": "0.0.1",
	"name": "@curiositi/db",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./client": {
			"types": "./dist/client.d.ts",
			"default": "./src/client.ts"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"default": "./src/schema.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"with-env": "dotenv -e ../../.env --",
		"push": "bun run with-env -- drizzle-kit push",
		"generate": "bun run with-env -- drizzle-kit generate",
		"migrate": "bun run with-env -- drizzle-kit migrate",
		"studio": "bun run with-env -- drizzle-kit studio"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.7",
		"postgres": "^3.4.7",
		"zod": "^4.3.4"
	},
	"devDependencies": {
		"@curiositi/tsconfig": "workspace:*",
		"drizzle-kit": "^0.31.5"
	}
}
