---
export interface Props {
  id?: string;
  className?: string;
  title: string;
  subtitle: string;
}

const { id, className, title, subtitle } = Astro.props;
---

<section id={id} class={`w-full py-20 md:py-32 ${className || ''}`}>
  <div class="px-4 md:px-6">
    <div class="flex flex-col items-center justify-center space-y-4 text-center">
      <div class="max-w-3xl space-y-2">
        <slot name="titlePrefix" />
        <h2 class="text-brand font-serif text-3xl font-medium tracking-tight md:text-4xl">
          {title}
        </h2>
        <p class="text-muted-foreground text-xl">{subtitle}</p>
      </div>
    </div>
    <slot />
  </div>
</section>