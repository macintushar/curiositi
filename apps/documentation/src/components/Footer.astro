---
import { Icon } from "@astrojs/starlight/components";
import config from "virtual:starlight/user-config";

const year = new Date().getFullYear();
const socials = config.social || [];
const github = socials.find((s) => s.icon === "github");
---

<footer class="site-footer">
  <div class="inner">
    <span>Â© {year} Curiositi</span>
    <div class="social-icons">
      <Icon name="github" size="14px" />
      <a href={github?.href} target="_blank" rel="noopener noreferrer">
        GitHub
      </a>
    </div>
    <div class="social-icons">
      <Icon name="seti:salesforce" size="14px" />
      <a href="https://curiositi.xyz" target="_blank" rel="noopener noreferrer">
        Curiositi Cloud
      </a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid var(--sl-color-white);
    padding: 1rem 0;
    margin-top: 2rem;
    color: var(--sl-color-text-dimmed);
  }
  .site-footer .inner {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    font-family: var(--font-instrument-sans);
    font-size: 0.875rem;
  }
  .site-footer a {
    color: inherit;
    text-decoration: none;
  }
  .site-footer a:hover {
    text-decoration: underline;
  }
</style>
