---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist.">
	<Navigation />
	<main class="flex min-h-screen flex-col items-center justify-center px-6">
		<div class="flex flex-col items-center gap-8 text-center">
			<pre class="text-left font-mono text-2xl leading-snug text-zinc-500 dark:text-zinc-400 select-none sm:text-3xl" aria-label="Confused cat ASCII art"> ?       ?
  /\__/\
 (o . o)  ?
 (")_(")
      ?</pre>
			<div class="flex flex-col items-center gap-3">
				<h1 class="font-serif text-5xl text-zinc-900 dark:text-white sm:text-6xl">404</h1>
				<p class="max-w-md text-lg text-zinc-500 dark:text-zinc-400">
					The page you're looking for doesn't exist or has been moved.
				</p>
			</div>
			<div class="flex gap-2">
			<a
				href="/"
				class="rounded-lg bg-zinc-900 px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-zinc-700 dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-200"
			>
				Go back home
			</a>
			<a
				href="/docs"
				class="rounded-lg bg-zinc-900 px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-zinc-700 dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-200"
			>
				Go to Docs
			</a>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
