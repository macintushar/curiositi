---
import { Icon } from "astro-icon/components";

const features = [
	{
		icon: "tabler:folder",
		title: "Smart Spaces",
		description:
			"Organize your work into Spaces. Group files, notes, and links together for each project or idea.",
	},
	{
		icon: "tabler:search",
		title: "AI-Powered Search",
		description:
			"Find anything instantly. Search by content, tags, or just describe what you're looking for.",
	},
	{
		icon: "tabler:upload",
		title: "Universal Upload",
		description:
			"Drop in any file type, paste links, or write notes. PDFs, images, videos, documents - all supported.",
	},
	{
		icon: "tabler:sparkles",
		title: "AI Assistant",
		description:
			"Get help summarizing documents, finding connections, and generating insights from your content.",
	},
	{
		icon: "tabler:stack-2",
		title: "Nested Organization",
		description:
			"Create spaces within spaces. Build the hierarchy that matches how your brain works.",
	},
	{
		icon: "tabler:shield-check",
		title: "Privacy First",
		description:
			"Your data is encrypted and secure. You own your content, always.",
	},
];
---

<section id="features" class="px-6 py-24">
	<div class="mx-auto max-w-6xl">
		<div class="mb-16 text-center">
			<h2 class="mb-4 text-3xl font-bold text-white sm:text-4xl">Everything you need</h2>
			<p class="mx-auto max-w-2xl text-lg text-zinc-400">
				Stop juggling multiple tools. Curiositi brings everything together in one simple
				workspace.
			</p>
		</div>

		<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
			{
				features.map((feature) => (
					<div class="rounded-xl border border-zinc-800 bg-zinc-900/50 p-6 transition-colors hover:border-zinc-700">
						<div class="mb-4 flex h-10 w-10 items-center justify-center rounded-lg bg-zinc-800">
							<Icon name={feature.icon} class="h-5 w-5 text-zinc-300" />
						</div>
						<h3 class="mb-2 text-lg font-semibold text-white">{feature.title}</h3>
						<p class="text-sm leading-relaxed text-zinc-400">{feature.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>
