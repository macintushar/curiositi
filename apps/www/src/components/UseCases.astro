---
import { Icon } from "astro-icon/components";

const useCases = [
	{
		icon: "tabler:palette",
		title: "Creators",
		description:
			"Organize inspiration, research, and content in one place. Never lose a great idea again.",
	},
	{
		icon: "tabler:book",
		title: "Students",
		description:
			"Keep notes, readings, and research organized. Study smarter with AI-powered summaries.",
	},
	{
		icon: "tabler:briefcase",
		title: "Professionals",
		description:
			"Manage projects, documents, and knowledge. Find what you need in seconds.",
	},
	{
		icon: "tabler:code",
		title: "Developers",
		description:
			"Store code snippets, documentation, and project resources. Your technical second brain.",
	},
	{
		icon: "tabler:camera",
		title: "Visual Thinkers",
		description:
			"Organize images, mood boards, and visual references. Search by description.",
	},
	{
		icon: "tabler:users",
		title: "Teams",
		description:
			"Share spaces and collaborate. Keep everyone aligned with shared knowledge.",
	},
];
---

<section class="px-6 py-24">
	<div class="mx-auto max-w-6xl">
		<div class="mb-16 text-center">
			<h2 class="mb-4 text-3xl font-bold text-white sm:text-4xl">Built for how you work</h2>
			<p class="mx-auto max-w-2xl text-lg text-zinc-400">
				Whether you're a creator, student, or professional, Curiositi adapts to your
				workflow.
			</p>
		</div>

		<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
			{
				useCases.map((useCase) => (
					<div class="group rounded-xl border border-zinc-800 bg-zinc-900/50 p-6 transition-colors hover:border-zinc-700">
						<div class="mb-6 flex aspect-video items-center justify-center rounded-lg bg-zinc-800/50">
							<Icon
								name={useCase.icon}
								class="h-10 w-10 text-zinc-600 transition-colors group-hover:text-zinc-400"
							/>
						</div>
						<div class="mb-2 flex items-center gap-2">
							<Icon name={useCase.icon} class="h-4 w-4 text-zinc-400" />
							<h3 class="text-base font-semibold text-white">{useCase.title}</h3>
						</div>
						<p class="text-sm leading-relaxed text-zinc-400">{useCase.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>
