---
import { Icon } from "astro-icon/components";
import { PLATFORM_URL } from "../constants";
---

<section class="px-6 py-24">
	<div class="mx-auto max-w-3xl text-center">
		<div
			class="rounded-2xl border border-zinc-800 bg-zinc-900/50 px-8 py-16"
		>
			<h2 class="mb-4 text-3xl font-bold text-white sm:text-4xl">
				Ready to organize your ideas?
			</h2>
			<p class="mx-auto mb-8 max-w-xl text-lg text-zinc-400">
				Join thousands of thinkers, creators, and professionals who trust Curiositi.
			</p>
			<a
				href={`${PLATFORM_URL}/sign-up`}
				class="inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 text-base font-medium text-zinc-900 transition-colors hover:bg-zinc-200"
			>
				Start for Free
				<Icon name="tabler:arrow-right" class="h-4 w-4" />
			</a>
			<p class="mt-4 text-sm text-zinc-600">No credit card required. Free plan available.</p>
		</div>
	</div>
</section>
