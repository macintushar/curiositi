{
	"name": "curiositi",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check-types": "turbo run check-types",
		"check": "biome check . && turbo run check-types"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"turbo": "^2.7.2",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.5",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
