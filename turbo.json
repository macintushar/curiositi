{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".cache/tsbuildinfo.json", "dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": [
		"POSTGRES_URL",
		"VITE_SENTRY_DSN",
		"VITE_SENTRY_ORG",
		"VITE_SENTRY_PROJECT",
		"SENTRY_AUTH_TOKEN",
		"PLATFORM_URL",
		"WORKER_URL",
		"BETTER_AUTH_GOOGLE_CLIENT_ID",
		"BETTER_AUTH_GOOGLE_CLIENT_SECRET",
		"BETTER_AUTH_SECRET",
		"S3_ACCESS_KEY_ID",
		"S3_SECRET_ACCESS_KEY",
		"S3_BUCKET",
		"S3_ENDPOINT",
		"OPENAI_API_KEY",
		"QSTASH_TOKEN",
		"QSTASH_CURRENT_SIGNING_KEY",
		"QSTASH_NEXT_SIGNING_KEY"
	],
	"globalPassThroughEnv": [
		"NODE_ENV",
		"CI",
		"VERCEL",
		"VERCEL_ENV",
		"VERCEL_URL",
		"npm_lifecycle_event"
	]
}
